<div id="<%= dom_id todo_item %>" class="row">

  <div class="col">
    <%= todo_item.title %>
  </div>

  <div class="col">
    <h5>
      <%= tag.span class: todo_item.priority_color do %>
        <%= todo_item.priority %>
      <% end %>
    </h5>
  </div>

  <div class="col">
    <%= todo_item.due_date %>
  </div>

  <div class="col">
    <div class="row">

      <div class="col">
        <%= link_to "Show", todo_item, class: "btn btn-primary" %>
      </div>

      <div class="col">
        <%= link_to "Edit", edit_todo_item_path(todo_item), class: "btn btn-secondary" %> 
      </div>

      <div class="col">
          <%= render 'todo_items/delete_modal', todo_item: todo_item%>
      </div>
    
    </div>
  </div>

</div>
